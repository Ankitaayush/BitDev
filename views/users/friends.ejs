<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href='https://fonts.googleapis.com/css?family=Anonymous Pro' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="/css/friends.css" rel="stylesheet"> 
</head> 
<body class="bg-black text-white  m-5">  
    <div class="container border">
        <div class="row border"> 
            <div class="col-8 fw-bold overflow-auto">display name</div>  
            <div class="col-2 fw-bold overflow-auto">codechef rating</div>
            <div class="col-2 fw-bold overflow-auto"> codeforces rating</div>
        </div>
        <% for(var fri of curuser.friends) { %> 
        <div class="row border"> 
          <div class="col-8">
            <a  
            <% if (fri.cfrating < 1200) { %>
            class="nav-link nav-item link-secondary" 
            <% } else if (fri.cfrating < 1400) { %>
              class="nav-link nav-item link-success" 
              <% } else if (fri.cfrating < 1600) { %>
                class="nav-link nav-item link-info"  
                <% } else if (fri.cfrating < 1900) { %>
                  class="nav-link nav-item link-primary"  
                  <% } else if (fri.cfrating >= 1900) { %>
                    class="nav-link nav-item link-danger" 
                    <% } %>
            href="/users/<%= fri.id %>"><%= fri.displayname %></a></div>  
          <div class="col-2"><%= fri.ccrating %></div>
          <div class="col-2"><%= fri.cfrating %></div>
        </div>  
        <% } %> 
    </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body> 
</html>