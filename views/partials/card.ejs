<!-- Card EJS -->
    <div class="container bg-black">
        <div class="card border-0 border-dark bg-black">
            <div class="slide slide1">
                <div class="content">
                    <div class="icon">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                        <h4 class="card-time">15 min ago</h4>
                    </div>
                </div>
            </div>
            <div class="slide slide2">
                <div class="content">
                    <h3 class="project-title text-white">
                       <a href="/posts/<%= mypost.id %> "><%= mypost.title %></a> 
                    </h3>
                    <p class="text-white"><%= mypost.description %></p>
                    <br>
                    <br>
                    <div>
                        &nbsp;&nbsp;&nbsp;
                        <button class="button-dec">
                            <i class="fa fa-heart" aria-hidden="true"></i>
                            <p class="like" id="like" style="color: rgb(0, 0, 0);"> <%= mypost.likes %> </p>
                        </button>
                        &nbsp;&nbsp;
                        <button class="button-dec">
                            <i class="fa fa-comment" aria-hidden="true"></i>
                            <p class="comment" style="color: rgb(0, 0, 0);">3</p>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="/js/card.js"></script>
