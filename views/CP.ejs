<body>
    <section id="navbar">
        <%- include('partials/navbar')%>
    </section>
    <section id="stats">
            <div class="row">
                <div class="col-lg-6 col-md-12 stats">
                   <h1 class="heading">CP Stats</h1> 
                    <div class="cf">
                        <img class ="logo_pic" src="/image/cf.jpg" alt="codeforces">
                        <p>
                            <h2>Codeforces</h2>
                            <h3 class="resFix">Handle  <span id="cfhandle"><%= curuser.cfhandle %></span></h3>
                            <h3 class="resFix">Current rating   <span id="cfrating"></span> </h3>
                            <h3 class="resFix">Current rank - <span id="cfcrank"></span></h3>
